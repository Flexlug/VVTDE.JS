<!doctype html>
<html prefix="og: http://ogp.me/ns#
              video: http://ogp.me/ns/video#">
<head>
    <title>VVTDE.JS</title>    
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <meta content="#1d1d1d" data-react-helmet="true" name="theme-color" />
    <meta property="og:site_name" content="VVTDE.JS - VK"/>

    <meta name="twitter:card" content="player" />
    <meta name="twitter:title" content="VK Video - VVTDE.JS" />
    <meta name="twitter:player" content="{{videoUrl}}/video.mp4`}"/>
    <meta name="twitter:description" content="Vk video description"/>

    <meta property="og:url" content="{{videoUrl}}"/>
    <meta property="og:video:url" content="{{videoUrl}}/video.mp4"/>
    <meta property="og:video:secure_url" content="{{videoUrl}}/video.mp4"/>
    <meta property="og:video:type" content="video/mp4"/>
    <meta property="og:title" content="VK Video"/>
    <meta property="og:description" content="VK Video description"/>
    
    <meta property="og:image" content="{{imageUrl}}">
    <meta property="og:image:width" content="400">
