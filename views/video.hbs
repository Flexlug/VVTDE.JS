<!doctype html>
<html prefix="og: http://ogp.me/ns#
              video: http://ogp.me/ns/video#">
<head>
    <title>VVTDE.JS</title>    
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <meta content="#1d1d1d" data-react-helmet="true" name="theme-color" />
    <meta property="og:site_name" content="VVTDE.JS - VK"/>=

    <!-- VK player video link -->
    <meta property="og:url" content="{{videoUrl}}"/>

    <!-- Link to static .mp4 file -->
    <meta property="og:video:url" content="{{videoUrl}}"/>

    <!-- Link to static .mp4 file via secured HTTPS -->
    <meta property="og:video:secure_url" content="{{videoUrl}}"/>

    <!-- Title to the video -->
    <meta property="og:title" content="{{videoTitle}}"/>

    <!-- Description to the video -->
    <meta property="og:description" content="VK Video description"/>

    <!-- URL to image thumbnail -->
    <meta property="og:image" content="{{imageUrl}}">
    
    <meta property="og:video:type" content="video/mp4"/>

    <meta property="og:image:width" content="800">
    <meta property="og:image:height" content="450">
    <meta property="og:video:width" content="800">
    <meta property="og:video:height" content="450">
</head>
<body>
    <iframe src="{{videoUrl}}" width="800" height="450" allow="autoplay; encrypted-media; fullscreen; picture-in-picture;" frameborder="0" allowfullscreen></iframe>
</body>
</html>